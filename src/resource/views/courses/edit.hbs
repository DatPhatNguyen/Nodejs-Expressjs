<div class="mt-4">
    <h3>Cập nhật khóa học</h3>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT" class="mt-4" enctype="application/x-www-form-urlencoded">
        <div class="mb-3">
            <label for="name" class="form-label fw-bold">Tên khóa học: </label>
            <input type="text" class="form-control" id="name" name="name" value="{{course.name}}">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label fw-bold">Mô tả khóa học: </label>
            <textarea class="form-control" id="description" name="description"> {{course.description}}</textarea>
        </div>
        <div class="mb-3">
            <label for="videoID" class="form-label fw-bold">Video ID: </label>
            <input type="text" class="form-control" id="videoID" name="videoID" value="{{course.videoID}}">
        </div>
        <div class="mb-3">
            <label for="level" class="form-label fw-bold">Trình độ: </label>
            <input type="text" class="form-control" id="level" name="level" value="{{course.level}}">
        </div>
        <button type="submit" class="btn btn-primary mt-3">Lưu lại</button>
</form>
</div>